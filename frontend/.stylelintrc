{
  "extends": [
    "stylelint-config-standard",
    "stylelint-scss"
  ],
  "rules": {
    "at-rule-no-unknown": [true, {
      "ignoreAtRules": ["include", "mixin", "if", "else"]
    }],
    "unit-blacklist": [["px"], {
      "ignoreProperties": {
        "px": ["/^border/", "box-shadow", "text-shadow"]
      }
    }]
  }
}